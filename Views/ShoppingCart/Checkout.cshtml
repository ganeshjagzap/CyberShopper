@{
    ViewData["Title"] = "Checkout";
    var items = ViewBag.Items as IEnumerable<Ecommerce.Models.ShoppingCart>;
    var totalAmount = ViewBag.TotalAmount as decimal?;
}

<h2>@ViewData["Title"]</h2>

<h3>Order Summary</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Unit Cost</th>
            <th>Total Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in items)
        {
            <tr>
                <td>@item.Product.ModelName</td>
                <td>@item.Quantity</td>
                <td>@item.Product.UnitCost</td>
                <td>@(item.Quantity * item.Product.UnitCost)</td>
            </tr>
        }
    </tbody>
</table>

<h3>Total Amount: @totalAmount</h3>

<form asp-controller="ShoppingCart" asp-action="PlaceOrder" method="post">
    <button type="submit" class="btn btn-success">Place Order</button>
</form>

