@model Ecommerce.Models.ShoppingCart

@{
    ViewData["Title"] = "Update Cart";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="ShoppingCart" asp-action="UpdateCart" method="post">
    <input type="hidden" name="productId" value="@Model.ProductId" />
    <div class="form-group">
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" value="@Model.Quantity" min="1" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
