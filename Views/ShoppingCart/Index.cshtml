@model IEnumerable<Ecommerce.Models.ShoppingCart>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Product.ModelName</td>
                <td>@item.Quantity</td>
                <td>
                    <form asp-controller="ShoppingCart" asp-action="UpdateCart" method="get" class="d-inline">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <button type="submit" class="btn btn-warning">Update Quantity</button>
                    </form>
                    <form asp-controller="ShoppingCart" asp-action="RemoveFromCart" method="post" class="d-inline">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>View All Products</h3>
<a asp-controller="Productsai" asp-action="Details" class="btn btn-info">View All Products</a>
<a asp-controller="ShoppingCart" asp-action="Checkout" class="btn btn-info">Checkout</a>
