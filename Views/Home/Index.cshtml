<div class="text-center">
    <h1 class="display-4">Welcome to Cyber Shopper!</h1>
    <h4>Our most popular products</h4>
</div>

@{
    var popular = ViewBag.PopularProducts as IEnumerable<Ecommerce.Models.Product>;
}

<div class="container">
    @if (popular != null && popular.Any())
    {
        var imageUrl = $"/images/Image.jpg";
        <div class="fake">
            @foreach (var item in popular)
            {
                <div class="product-card">
                    <img src="@imageUrl" class="product-image" alt="@item.ModelName" />
                    <div class="card-body">
                        <b class="card-title">@item.ModelName</b>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text unit-cost">@item.UnitCost.ToString("c")</p>
                        <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="add-to-cart-form">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-success btn-icon">
                                <i class="fas fa-cart-plus"></i>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No popular products found.</p>
    }
</div>

<style>
    .container {
        padding: 20px;
    }

    h1 {
        margin-bottom: 20px;
        font-size: 24px;
        color: #333;
        text-align: center;
    }

    .fake {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
    }

    .product-card {
        position: relative;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 410px;
    }

    .product-image {
        width: calc(100% - 20px);
        height: 200px;
        object-fit: cover;
        padding: 10px;
        margin: 10px;
    }

    .card-body {
        flex: 1;
        padding: 16px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
    }

    .card-title {
        font-size: 18px;
        color: #333;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 16px;
        color: #555;
        margin-bottom: 10px;
    }

    .unit-cost {
        font-size: 16px;
        color: #333;
        font-weight: bold;
        margin-top: auto;
    }

    .btn-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 8px;
        font-size: 20px;
        border: none;
        background-color: transparent;
        color: #fff;
        position: absolute;
        bottom: 16px;
        right: 16px;
    }

    .btn-success {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: #fff;
        border-radius: 4px;
    }

        .btn-success:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

    .add-to-cart-form {
        position: absolute;
        bottom: 16px;
        right: 16px;
        margin: 0;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
