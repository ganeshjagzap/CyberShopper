<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce.styles.css" asp-append-version="true" />
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        .navbar-brand {
            font-size: 1.75rem; /* Adjust the size as needed */
        }

        .user-icon {
            font-size: 1.25rem; /* Adjust icon size */
            color: #000; /* Adjust icon color */
        }

        .dropdown-menu {
            padding-right: 20px; /* Add padding to ensure it doesn't go off the page */
        }

            .dropdown-menu::before {
                content: "";
                position: absolute;
                top: 0;
                right: 100%; /* Position the arrow on the left side of the dropdown */
                width: 0;
                height: 0;
                border: 6px solid transparent;
                border-right-color: #ffffff; /* Match the dropdown background color */
            }

        .dropdown-item i {
            margin-right: 8px;
        }

        /* Additional styles to ensure dropdown visibility */
        .navbar-nav {
            position: relative; /* Ensure that dropdown menu positioning is correct */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="d-flex justify-content-between w-100">
                    <!-- Left-aligned items -->
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CyberShopper</a>

                    <!-- Right-aligned items -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownCategories" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categories
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownCategories">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Productsai", new { categoryId = 1 })"><i class="fas fa-laptop"></i> Laptops</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Productsai", new { categoryId = 2 })"><i class="fas fa-mobile-alt"></i> Mobile</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Productsai", new { categoryId = 3 })"><i class="fas fa-clock"></i> Watch</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Productsai", new { categoryId = 4 })"><i class="fas fa-cogs"></i> Accessories</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Details", "Productsai")"><i class="fas fa-box"></i> All Products</a></li>
                            </ul>

                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownMyAccount" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user user-icon"></i> <!-- Font Awesome user icon -->
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMyAccount">
                                <li><a class="dropdown-item" href="/ShoppingCart/OrderHistory"><i class="fas fa-history"></i> Account History</a></li>
                                <li><a class="dropdown-item" href="/ShoppingCart/Index"><i class="fas fa-shopping-cart"></i> Cart</a></li>
                                <li><a class="dropdown-item" href="/Account/LogIn"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Extra content can be placed here if needed -->
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>