@model IEnumerable<Ecommerce.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<head>
</head>
<h1>CATEGORIES</h1>

<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a href="@Url.Action("Index", "Productsai", new { categoryId = item.CategoryId })" class="btn btn-primary">View Products</a>
                </td>
            </tr>
        }
    </tbody>
</table>
